{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": [
      "./packages",
      "../server/src"
    ],
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node",
    "paths": {
      "server/*": [
        "../server/src/*"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx"
  },
  "include": [
    "packages/**/*",
    "../server/src/**/*",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
